  <div class="page-header" style="background-image: url('../assets/img/login-image.jpg');">
    <div class="filter"></div>
    <div class="container">
      <div class="content">
        <div class="container-fluid">
          <div class="row justify-content-center">
            <div class="col-md-10">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title">Buat Surat</h4>
                  <p class="card-category">Lengkapi data dibawah!</p>
                </div>
                <div class="card-body">

                  

                  <form action="/pengajuan_surat" method="post">
                    <div class="row">                     
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="bmd-label-floating">Nama</label>
                          <input type="text" class="form-control" name="nama" style="color: black;">
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="bmd-label-floating">NPM </label>
                          <input type="text" class="form-control" name="npm" style="color: black;">
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label class="bmd-label-floating">Judul Skripsi</label>
                          <input type="text" class="form-control" name="judul_skripsi" style="color: black;">
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label class="bmd-label-floating">Tujuan Surat</label>
                          <input type="text" class="form-control" name="tujuan_surat" style="color: black;">
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="bmd-label-floating">Pin</label>
                          <input id="pin" type="text" maxlength="4" class="form-control" name="pin" style="color: black;">
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <label for="exampleFormControlSelect1" class="bmd-label-floating" >Program Studi</label>
                          <select class="form-control" id="exampleFormControlSelect1" name="program_studi">
                            <option value=""></option>
                          </select>
                        </div>
                      </div>                  
                    </div> 
                    
                    <input type="hidden" name="status_surat" value="proses">

                    <br>
                    <button type="button" class="btn btn-primary pull-left" data-toggle="modal" data-target="#exampleModal">
                      <i class="fas fa-save"></i> ajukan surat
                    </button>
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content" style="background-color: #7b1fa2;">
                          <div class="modal-header" style="border: none;">
                            <h5 class="modal-title pull-left" id="exampleModalLabel" style="color: white;">PERHATIAN</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body"  style="background-color: #202940;">
                            <p style="color: white;">Apakah anda yakin ingin mengajukan surat ?</p>
                          </div>
                          <div class="modal-footer"  style="background-color: #202940; border: none;">
                            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Tidak <i class="fas fa-times"></i></button>
                            <button type="submit" class="btn btn-primary btn-sm">Ya <i class="fas fa-thumbs-up"></i></button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="clearfix"></div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
